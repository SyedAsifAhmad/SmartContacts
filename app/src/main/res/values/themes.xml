<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Light Theme -->
    <style name="Theme.SmartContacts" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@color/light_gray</item>

        <!-- Toolbar Colors -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Text Colors -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>

        <!-- Button Style -->
        <item name="android:buttonStyle">@style/ButtonStyleLight</item>

        <!-- Floating Action Button -->
        <item name="colorSecondary">@color/accent</item> <!-- FAB background color -->
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="ButtonStyleLight" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/button_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextInputStyleLight" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
