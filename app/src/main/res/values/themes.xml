<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base dark theme with black buttons and white background -->
    <style name="Base.Theme.SmartContacts" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Status bar and button colors -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/black</item>
        <item name="colorOnPrimaryContainer">@color/white</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/black</item>

        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnBackground">@color/white</item>


        <!-- Text colors -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:editTextColor">@color/black</item>
    </style>



    <style name="Theme.SmartContacts" parent="Base.Theme.SmartContacts" />

</resources>
