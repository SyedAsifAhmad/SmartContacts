<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Dark Theme -->
    <style name="Theme.SmartContacts" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:windowBackground">@color/dark_gray</item>

        <!-- Toolbar Colors -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Text Colors -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>

        <!-- Button Style -->
        <item name="android:buttonStyle">@style/ButtonStyleDark</item>

        <!-- Floating Action Button -->
        <item name="colorSecondary">@color/accent</item> <!-- FAB background color -->
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="ButtonStyleDark" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/button_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextInputStyleDark" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>
